<h1>Advanced Search</h1>

<%= form_for @search do |s| %>
<div class="form">
  <div class="field">
    <%= s.label :keywords %><br />
    <%= s.text_field :keywords, class: 'form-control' %>
  </div>

  <div class="field">
  <p><%= s.label "min_price", "Min Price" %> - <%= s.text_field :min_price, size: 10, class: 'form-control' %></p>
  <p><%= s.label "max_price", "Max Price" %> - <%= s.text_field :max_price, size: 10, class: 'form-control' %></p>
  </div>

  <div class="actions"><%= s.submit "Search", class: "btn btn-primary" %></div>
  <% end %>
</div>

<p><%= link_to 'Back', skeins_path %></p>
