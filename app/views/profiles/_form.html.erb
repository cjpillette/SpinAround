<%= form_for(profile) do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <form>

  <div class="field">
    <%= f.label :profile_avatar %>
    <%= f.file_field :profile_avatar %>
  </div>

  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-check">
    <%= f.label :is_guild_member, class: 'form-check-label' %>   
    <%= f.check_box :is_guild_member, type: 'checkbox', class: 'form-check-input' %> 
  </div>

  <div class="form-group">
    <%= f.label :street_address %>
    <%= f.text_field :street_address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :suburb %>
    <%= f.text_field :suburb, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :postcode %>
    <%= f.text_field :postcode, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, :value => "Australia", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  </form>
<% end %>
