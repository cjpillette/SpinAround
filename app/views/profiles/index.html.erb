<h1>Profiles</h1>
  <%= link_to 'Add new Profile', new_profile_path %>
    <% @profiles.each do |profile| %>
      <div class="card" style="width: 20rem;">
        <%= image_tag('profile_default', class: 'card-img-top') %>
          <div class="card-block">
            <h4 class="card-title"><%= profile.first_name %> <%= profile.last_name %></h4>
            <p class="card-text">   
              <% if profile.is_guild_member == true %>
                Member of the guild
              <% else %>
              <% end %>
              <br />
              Resides at: <%= profile.street_address %>, 
                          <%= profile.suburb %>,
                          <%= profile.postcode %>,
                          <%= profile.country %>
              <br />
              Email: <%= profile.user.email %>,
              <br />
              Phone: (03) 9763 43 24
            </p>
            <%= link_to 'Edit', edit_profile_path(profile), class: "btn btn-info" %>
            <%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </div>
      </div>
    <% end %>
