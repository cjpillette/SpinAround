<h1>Profiles</h1>
  <%= link_to 'Add new Profile', new_profile_path %>
    <% @profiles.each do |profile| %>
      <div class="card" style="width: 20rem;">
        <% if profile.profile_avatar.present? %>
          <%= image_tag(profile.profile_avatar, class: 'card-img-top', width: '100%') %>
        <% else %>
         <%= image_tag('knitting_sheep', class: 'card-img-top', width: '50%') %>
        <% end %>
          <div class="card-block">
            <h4 class="card-title"><%= profile.first_name.capitalize %> <%= profile.last_name.capitalize %></h4>
            <p class="card-text">   
              <% if profile.is_guild_member == true %>
                Member of the guild
              <% else %>
              <% end %>
              <br />
              Resides at: <%= profile.street_address %>, 
                          <%= profile.suburb %>,
                          <%= profile.postcode %>,
                          <%= profile.country %>
              <br />
              Email: <%= profile.user.email %>,
              <br />
              Phone: <%= profile.phone_number %>
            </p>
            <%= link_to 'Edit', edit_profile_path(profile), class: "btn btn-info" %>
            <%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </div>
      </div>
    <% end %>
<%= paginate @profiles %>
